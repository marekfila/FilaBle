<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="BLE name"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:layout_below="@+id/bleName"
            android:layout_marginLeft="10dp"
            android:src="@drawable/unit2f" />

        <ImageView
            android:id="@+id/ivBlue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/bleName"
            android:layout_toRightOf="@+id/imageView"
            android:layout_marginTop="25dp"
            android:src="@drawable/base" />

        <ImageView
            android:id="@+id/ivAlert"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/bleName"
            android:layout_alignRight="@+id/imageView"
            android:layout_marginRight="17dp"
            android:src="@drawable/alertmy" />

        <!--android:src="@drawable/unit"-->

        <TextView
            android:id="@+id/customName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Custom"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewBars"
            android:layout_alignEnd="@+id/imageViewBars"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:text="Serial"
            android:textSize="10sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/tv_flow_obvolavani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewBars"
            android:layout_alignEnd="@+id/imageViewBars"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="0dp"
            android:text="- l/min"
            android:textColor="#1B8638"
            android:textSize="16sp"
            android:textStyle="bold"

            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageViewBars"
            android:layout_width="180dp"
            android:layout_height="102dp"
            android:layout_below="@+id/bleName"
            android:layout_toRightOf="@+id/ivBlue"
            android:adjustViewBounds="true"
            android:src="@drawable/bars"
            tools:visibility="visible" />
        <!--android:src="@drawable/bars"-->

        <ProgressBar
            android:id="@+id/progressBarFlow"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="135dp"
            android:layout_height="6dp"
            android:layout_alignEnd="@+id/imageViewBars"
            android:layout_alignBottom="@+id/imageViewBars"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="83.5dp"
            android:max="100"
            android:progress="0"
            tools:visibility="invisible" />

        <ProgressBar
            android:id="@+id/Filter"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="135dp"
            android:layout_height="6dp"
            android:layout_alignEnd="@+id/imageViewBars"
            android:layout_alignBottom="@+id/imageViewBars"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="47.5dp"
            android:max="100"
            android:progress="0"
            tools:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressBarBattery"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="135dp"
            android:layout_height="6dp"
            android:layout_alignEnd="@+id/imageViewBars"
            android:layout_alignBottom="@+id/imageViewBars"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="12dp"
            android:max="100"
            android:progress="0"
            tools:visibility="invisible" />


    </RelativeLayout>

</LinearLayout>